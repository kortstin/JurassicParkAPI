<% content_for :title do %>
  <%= @cage.name %> &ndash; <%= DateTime.now.to_s(:nice_date)%>
<% end %>


<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @cage.name %> :
        <%= @cage.power_status %>
      </p>

      <div class="panel-block">
        Max capacity: <%= @cage.max_capacity %>
      </div>

      <div class="panel-block">
        Number of dinosaurs: <%= @cage.number_of_dinosaurs %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_cage_path(@cage), class: "button is-gray" %>
        <%= link_to 'Delete', cage_path(@cage), method: :delete, data: { confirm: "Are you sure?"},
        class: "button is-gray" %>
      </div>
      <div class="column">
        
      </div>
    </div>
  </div>
</div>
